# Site Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Astra
NEXT_PUBLIC_CONTACT_EMAIL=contact@astra.example.com

# Email Service (Resend)
# Sign up at https://resend.com to get your API key
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@astra.example.com

# Analytics (Optional)
# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics (Privacy-friendly alternative)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=astra.example.com

# Hotjar (Optional - for heatmaps and session recordings)
NEXT_PUBLIC_HOTJAR_ID=xxxxx

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_DEMO_BOOKING=true
NEXT_PUBLIC_ENABLE_ROI_CALCULATOR=true

# Development
NODE_ENV=development
