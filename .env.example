# Site Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_SITE_NAME=Astra
NEXT_PUBLIC_CONTACT_EMAIL=contact@astra.example.com

# Email Service (Resend)
# Sign up at https://resend.com to get your API key
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@astra.example.com

# Analytics (Optional)
# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics (Privacy-friendly alternative)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=astra.example.com

# Visual Regression Testing (Percy)
# Get your token from https://percy.io → Settings → API tokens
PERCY_TOKEN=your_percy_token_here

# Hotjar (Optional - for heatmaps and session recordings)
NEXT_PUBLIC_HOTJAR_ID=xxxxx

# Tawk.to Live Chat (FREE - no credit card required)
# Sign up at https://www.tawk.to
# Get Property ID and Widget ID from your Tawk.to dashboard
# Dashboard > Settings > Channels > Website > Embed Code
# Format: https://embed.tawk.to/{PROPERTY_ID}/{WIDGET_ID}
NEXT_PUBLIC_TAWK_PROPERTY_ID=your_property_id
NEXT_PUBLIC_TAWK_WIDGET_ID=your_widget_id

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_DEMO_BOOKING=true
NEXT_PUBLIC_ENABLE_ROI_CALCULATOR=true

# Development
NODE_ENV=development
